// main:portal.less
/*自定义*/
/* CSS Document */
*{ padding:0px; margin:0px; list-style:none; text-decoration:none;}
.clearb{ clear:both; height:0px; font-size:0px; overflow:hidden; width:100%}
.floatL{ float:left}
.floatR{ float:right}
a{color:#333;text-decoration:none;}
a:hover{ color:@portal-color;text-decoration:none;}
ol, ul{
    margin-bottom:0;
}
h1,h2,h3,h4{
    margin:0;
    padding:0;
}
.w-385{
    width: 385px;
}
.w-405 {
    width: 405px;
}

/*菜单*/
body {
    background: url(../images/portal/banner.jpg) no-repeat center 0px;
    font-family: "微软雅黑";
    color:#333;
}
.header {
    height: 120px;
    background: url(../images/portal/header_bg.png) repeat 0 0px;
    display: block;
    overflow: hidden;
    .logo {
    width: 439px;
    height: 80px;
    margin: 15px auto;
    display: block;
    }
}
/*首页菜单样式*/
.nav {
    height: 42px;
    line-height: 42px;
    background: url(../images/portal/nav_bg.png) repeat-x 0 0px;
    .nav-con {
        width: 1200px;
        margin: 0px auto;
        ul{
            margin-bottom:0;
        }
    }
}
.sub-nav{
    margin:0;
}
.sub-nav li {
        float: left;
        background: url(../images/portal/ico1.jpg) no-repeat right center;
        padding-right: 1px;
        font-size: 14px;
        cursor: pointer;
        position: relative;
        text-align: center;
        a {
            color: @write;
            display: inline-block;
            width: 102px;
        }
}

.sub-nav li ul {
    display: none;
    position: absolute;
    z-index: 1000;
    background:@portal-color;
    width: 102px;
     li {
    background: none;
    width: 106px;
    padding: 0px;
    text-align: center;
    a{
        display: block;
        padding: 0px;
        }
    }
}
.sub-nav li a:hover,
.hover a,
.login-msg a:hover,
.login-msg li.user-info .ul-info a:hover{
    text-decoration:none;
}

.sub-nav li a:hover,.hover a{ 
    background:@portal-color;
}
.sub-nav li ul li a:hover {
    background: url(../images/portal/nav_bg.png) repeat-x 0 0px;
}
.login-msg li.user-info .user-name{ 
    background:url(../images/portal/user.png) @portal-color no-repeat 2px 10px; 
}
.login-msg li.user-info{
    .ul-info{
    position:absolute;
    z-index: 1000;
    background: @portal-color;
    width:84px;display:none;
        li{
            width:100%;
            a{
                padding:0px;
                width:100%;
                &:hover{
                    background:@portal-other-color;
                }
            }
        }
    }
    &:hover{
        .ul-info{
            display:block;
        }
    }
} 
.login-msg
    li {
        float: left;
        color: #b4f3fa;
        background: @portal-color;
        width: 84px;
        margin: 0 1px;
        text-align: center;
    a{
        color: #b4f3fa;
        padding-left:26px;
        display: inline-block;
        height: 42px;
    }
}
.bg1{
     position: relative;
    a{
        background: url(../images/portal/ico2.png)  @portal-color no-repeat 3px 10px;
    }
}
/*搜索*/
.search-wrap {
    width: 136px;
    margin-top:7px;
}
 .search-wrap .search-content {
     padding-left:22px;
     position: relative;
}
 .search-wrap .search-content #J_searchStatus 
    {
    border: 0 none;
    cursor: pointer;
    width:15px;
    height:15px;
    display: block;
    overflow: hidden;
    position: absolute;
    font-size: 0;
    left: 0;
    top: 0;
    outline: 0;
    background: url("../images/portal/s-zoom-bg.png") no-repeat;
    margin:6px 0 0 3px;
}
.search-wrap 
.search-title {
    height:25px;
    line-height:25px;
}
.search-wrap .search-title input {
    border: 0 none;outline: 0;
    color:@write;
    width:100%;
    height:100%;
    background:transparent;
}
.search-title input::-webkit-input-placeholder{
    color:@write;
}

/*内容部分*/

