}
.main-form {
    margin: 30px auto 50px auto;
    min-height: 600px;
    background: @write;
    padding: 40px;
    width: 1200px;
    border: 1px solid #ddd;
    box-shadow: 2px 2px 5px 0 #666;
    margin-bottom: 20px;
    background-color: white;
}
.form-control{
    height:inherit;
}
.no-data {
    text-align: center !important;
    font-size: 40px !important;
    color: #D6D6D6 !important;
    line-height: 175px !important;
}
.save-btn{
    width:1200px;
    margin:0 auto;
}
.parent{
     background: url('../images/portal/arrow.png') no-repeat right center; 
    width:320px;
    height: 34px;
    overflow: hidden;
    border:1px solid #ccc;
    border-radius: 4px;
    -webkit-box-shadow: inset 0 1px 1px rgba(0,0,0,.075);
    box-shadow: inset 0 1px 1px rgba(0,0,0,.075);
    -webkit-transition: border-color ease-in-out .15s,-webkit-box-shadow ease-in-out .15s;
    -o-transition: border-color ease-in-out .15s,box-shadow ease-in-out .15s;
    transition: border-color ease-in-out .15s,box-shadow ease-in-out .15s;

}
.form-horizontal .select-reset{
    background: transparent;
    width:350px;
    height: 100%;
   border:none;
   padding:0;
   padding-left:12px;

}
.form-horizontal .select-reset option{
     width:320px;
}
.select-reset::-ms-expand { display: none; }

/*弹框样式3*/
.login-box{
    position: fixed;
    left: 0;
    top: 0;
    height: 100%;
    width: 100%;
    background-color: rgba(0, 0, 0, 0.5);
    -moz-opacity:0.6;filter:alpha(opacity=50);filter:"alpha(opacity=60)";opacity:0.5;
    visibility: hidden;
    -webkit-transition: opacity 0.3s 0s, visibility 0s 0.3s;
    -moz-transition: opacity 0.3s 0s, visibility 0s 0.3s;
    transition: opacity 0.3s 0s, visibility 0s 0.3s;
    z-index:9999;
}
.login-box.is-visible3 {
    opacity: 1;
    visibility: visible;
    -webkit-transition: opacity 0.3s 0s, visibility 0s 0s;
    -moz-transition: opacity 0.3s 0s, visibility 0s 0s;
    transition: opacity 0.3s 0s, visibility 0s 0s;
}
.cd-popup-container3 {
    position:fixed;
    width:330px;
    left:50%;
    top:40%;
    margin-left:-165px;
    margin-top:-125px;
    background: @write;
    border-radius: .4rem .4rem .4rem .4rem;
    box-shadow: 0 0 20px rgba(0, 0, 0, 0.2);
    -webkit-transform:scale(0.8);
    -moz-transform:scale(0.8);
    -ms-transform:scale(0.8);
    -o-transform:scale(0.8);
    transform:scale(0.8);
    -webkit-backface-visibility: hidden;
    -webkit-transition-property: -webkit-transform;
    -moz-transition-property: -moz-transform;
    transition-property: transform;
    -webkit-transition-duration: 0.3s;
    -moz-transition-duration: 0.3s;
    -ms-transition-duration: 0.3s;
    -o-transition-duration: 0.3s;
    transition-duration: 0.3s;
}
.cd-popup-close{
    position: absolute;
    right:10px;top:10px;
    z-index: 10;
    display: block;
    font-size:16px;
 }
.is-visible3 .cd-popup-container3 {
    -webkit-transform:scale(1);
    -moz-transform:scale(1);
    -ms-transform:scale(1);
    -o-transform:scale(1);
    transform:scale(1);
}
