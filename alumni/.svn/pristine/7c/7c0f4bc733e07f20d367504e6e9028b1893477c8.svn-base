// main:portal.less
/*自定义*/
/* CSS Document */
*{ padding:0px; margin:0px; list-style:none; text-decoration:none;}
.clearb{ clear:both; height:0px; font-size:0px; overflow:hidden; width:100%}
.floatL{ float:left}
.floatR{ float:right}
a{color:#333;text-decoration:none;}
a:hover{ color:#1c4385;text-decoration:none;}
@write:#fff;
.w-385 {
    width: 385px;
}
.w-405 {
    width: 405px;
}

/*菜单*/
body {
    background: url(../images/portal/banner.jpg) no-repeat center 0px;
    font-family: "微软雅黑";
    color:#333;
}
.header {
    height: 120px;
    background: url(../images/portal/header_bg.png) repeat 0 0px;
    display: block;
    overflow: hidden;
    .logo {
    width: 439px;
    height: 80px;
    margin: 15px auto;
    display: block;
    }
}
.nav {
    height: 42px;
    line-height: 42px;
    background: url(../images/portal/nav_bg.png) repeat-x 0 0px;
    border-bottom: solid 1px #78a7d6;
    .nav-con {
        width: 1200px;
        margin: 0px auto;
    }
}
.sub-nav li {
        float: left;
        background: url(../images/portal/ico1.jpg) no-repeat right center;
        padding-right: 1px;
        font-size: 14px;
        cursor: pointer;
        position: relative;
        text-align: center;
        a {
            color: @write;
            display: inline-block;
            width: 102px;
        }
}


.sub-nav li ul {
    display: none;
    position: absolute;
    z-index: 1000;
    background: #115095;
    width: 102px;
     li {
    background: none;
    width: 106px;
    padding: 0px;
    text-align: center;
    a{
        display: block;
        padding: 0px;
        }
    }
}
.nav-con .sub-nav li a:hover,.hover a{ background:#0f4f95}
.menu-item:hover ul{
    display:block;
}
.nav-con .sub-nav li ul li a:hover {
    background: url(../images/portal/nav_bg.png) repeat-x 0 0px;
}
/*搜索*/
.search-wrap {
    width: 100px;
    margin-top:7px;
}
 .search-wrap .search-content {
     padding-left:22px;
     position: relative;
}
 .search-wrap .search-content #J_searchStatus 
 {
    border: 0 none;
    cursor: pointer;
    width:15px;
    height:15px;
    display: block;
    overflow: hidden;
    position: absolute;
    font-size: 0;
    left: 0;
    top: 0;
    outline: 0;
    background: url("../images/portal/s-zoom-bg.png") no-repeat;
    margin:6px 0 0 3px;
}
.search-wrap 
.search-title {
    height:25px;
    line-height:25px;
}
.search-wrap .search-title input {
    border: 0 none;outline: 0;
    color:@write;
    width:100%;
    height:100%;
    background:transparent;
}
.search-title input::-webkit-input-placeholder{
    color:@write;
}
/**/
.nav-con {
    .login-msg
     li {
        float: left;
        color: #b4f3fa;
        background: #115095;
        width: 84px;
        margin: 0 1px;
        text-align: center;
    a{
            color: #b4f3fa;
            padding-left:26px;
            display: inline-block;
            height: 42px;
        }
    }
    .bg1{
        position: relative;
        a{
            background: url(../images/portal/ico2.png) #115095 no-repeat 3px 10px;
        }
    }
}
/*内容部分*/
.title-1, .title-4 {
    background: url(../images/portal/ico7.png) no-repeat 90px center;
    height: 30px;
    line-height: 30px;
    font-size: 18px;
    color: #0a48b1;
}
.title-2 {
    height: 40px;
    background: #eeeeee;
    line-height: 40px;
    border-top: solid 3px #1c4385;
    color: #000;
    font-size: 18px;
    text-align: center;
    font-weight: normal;
}
.title-3 {
    background: url(../images/portal/title.png) no-repeat 0 0px;
    height: 55px;
    font-size: 18px;
    color: #fff;
    font-weight: normal;
    line-height: 50px;
    padding-left: 20px;
    margin-left: -5px;
}
.main {
    margin: 335px auto 20px auto;
    width: 1200px;
}
.h_left {
    width: 816px;
    background: #FFF;
    padding: 12px;
}
.h_right {
    width: 345px;
    background: #e5edf4;
    padding-bottom: 10px;
}
.focus-pic {
    width: 404px;
    height: 277px;
}
.news-information {
    width: 385px;
}
.new-list li, 
.newlist2 li {
    display: block;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    height: 30px;
    line-height: 30px;
    font-size: 14px;
    padding-left: 15px;
    background: url(../images/portal/ico8.png) no-repeat 2px 12px;
}
.newlist2 li {
    border-bottom: dotted 1px #d9d9d9;
    height: 40px;
    line-height: 40px;
    background-position: 2px 18px;
}
.new-list li a, .newlist2 li a {
    color: #333;
}
.new-content {
    height: 315px;
}

.newlist2 li a span.date {
    color: #666;
    padding-right: 22px;
    font-size: 12px;
}
.newlist2 .more {
    height: 30px;
    line-height: 30px;
    text-align: right;
    display: block;
    color: #949494;
    font-size: 12px;
}
/*校友刊物*/
.pic_list{
    margin-top: 10px;
    li {
    width: 160px;
    float:left;
    display: inline-block;
    margin: 0 22px;
    a{
        img {
                display: block;
                width: 160px;
                height: 199px;
            }
        }
     span {
        display: block;
        width: 100%;
        height: 30px;
        line-height: 30px;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
        text-align: center;
        }
    }
    .more {
    float: right;
    color: #949494;
    font-size: 12px;
    }
    
} 
.foot-link {
    margin-top: 10px;
    a {
    height: 30px;
    line-height: 30px;
    display: inline-block;
    float: left;
    margin-right: 20px;
    }
}
/*通知公告*/
.right-con{
    padding: 0 15px;
    p{
        line-height:40px;
        color:#333;
    }

}
.video_box{
    width: 315px;
    position: relative;
    img{
        width: 100%;
        max-height: 176px;
        height: 176px;
    }
}
/*footer*/
.footer {
    width: 100%;
    min-width: 1200px;
    background: #5072a4;
    .footer-con {
        width: 1200px;
        margin: 0px auto;
        background: url(../images/portal/bottom_logo.png) no-repeat left center;
        padding: 18px 0px;
        line-height: 28px;
        .footer-desc {
            margin-left: 371px;
            text-indent: 1em;
            padding-left: 15px;
            border-left: 1px solid #8bb8d9;
        }
         p {
            color: #edf0f4;
            font-size: 14px;
            margin: 0px;
        }
    }
}
/*detail*/
.articel-title {
    text-align: center;
    line-height: 30px;
    border-bottom: solid 1px #d9d9d9;
    padding: 10px 0px;
    font-size: 18px;
    color:#333;
}
.sub-tit {
    text-align: center;
    height: 30px;
    line-height: 30px;
    color: #666;
    margin-bottom: 15px;
}
.article-content {
    line-height: 28px;
    p{
        text-indent: 2em;
    }
}