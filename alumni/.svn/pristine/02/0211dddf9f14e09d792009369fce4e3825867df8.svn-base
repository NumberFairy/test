// main:portal.less
.article-main{
    background: url(../images/portal/left_bg.png) #FFF no-repeat 20px 0px;
    padding: 20px;
    overflow: hidden;
}
.article-left {
    width: 200px;
    background: #eeeeee;
    padding-bottom: 100px;
}
.sub-menu li {
    height: 45px;
    line-height: 45px;
    border-bottom: solid 1px #e3e3e3;
    border-top: solid 1px #f4f4f4;
    font-size: 14px;
    cursor: pointer;
    a {
    margin-left: 5px;
    border-radius: 5px 0 0 5px;
    display: block;
    height: 45px;
    text-indent: 30px;
    background: url(../images/portal/ico9.png) no-repeat 10px 20px;
    }
}
.sub-menu li a:hover {
    background: url(../images/portal/ico10.png) #FFF no-repeat 10px 20px;
}
.sub-menu li .isMenu{
     background: url(../images/portal/ico10.png) #FFF no-repeat 10px 20px;
}
.article-right {
    width: 940px;
    position: relative;
}
.title-4 {
    font-size: 24px;
    color: #950011;
    font-weight: normal;
    background-position: 100px center;
    border-bottom: solid 5px #eeeeee;
    padding-bottom: 10px;
    width:940px;
}

.column-list dl{
    height: 95px;
    border-bottom: solid 1px #dfdfdf;
    padding: 25px 0px;
    dt {
        width: 55px;
        height: 95px;
        border-radius: 10px;
        border: solid 1px #0685b7;
        float: left;
        margin: 0 30px 0 15px;
        line-height: 30px;
        color: #004f8f;
        text-align: center;
        span {
            display: block;
            font-size: 30px;
            font-weight: bold;
        }
    }
    .content {
        width: 838px;
        float: left;
    a {
        font-size: 18px;
        height: 30px;
        line-height: 30px;
        display: block;
        overflow: hidden;
    }
    p {
        line-height: 14px;
        color: #444;
        line-height: 25px;
    }
    .abstract {
        margin-top: 15px;
        overflow: hidden;
        text-overflow: ellipsis;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        color: #666;
        }
    }
} 
