<%@ page language="java" contentType="text/html; charset=UTF-8" pageEncoding="UTF-8"%>
    <%@include file="/WEB-INF/jsp/common/header.jsp"%>
        <title>校友管理及分析系统</title>
        </head>

        <body class="signin">
            <div class="signinpanel">
                <div class="row">
                    <div class="col-sm-12">
                        <div class="login-title">
                            <span>登录</span>
                        </div>
                        <form class="form-horizontal" method="post" onsubmit="postData()">
                            <div class="form-group">
                                <input type="text" name="loginName" class="form-control uname" placeholder="用户名" style="margin-top:0;" />
                            </div>
                            <div class="form-group">
                                <input type="password" name="password" class="form-control pword m-b" placeholder="密码" />
                            </div>
                            <div class="form-group">
                                <button type="button" id="btn-login" class="btn btn-info btn-block">登录</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </body>
        <%@ include file="/WEB-INF/jsp/common/js-container.jsp"%>
            <script type="text/javascript" src="${contentPath}/resources/js/login.js"></script>
            </html>