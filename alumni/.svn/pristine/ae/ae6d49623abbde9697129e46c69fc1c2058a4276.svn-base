var actionPath = contextPath + "/memo";
$(function() {
    loadData();

    $("#addMemo").click(function() {
        memoAddOrCheck();
        initMemoValidator();
    });

    $("#detail").click(function() {
        detail();
    });

    $("#saveMemo").click(function() {
        saveMemo();
    });

    $("#alert").click(function() {
        detail();
    });

    $("#complete").click(function() {
        complete();
    });

    $("#delete").click(function() {
        deleteByIds();
    });
});

/**
 * 根据id删除数据
 */
function deleteByIds() {
    if (!judgeCheckedIds) {
        return;
    }
    var ids = getCheckedIds();
    $.post(actionPath + "!deleteByIds?ids=" + ids, function(data) {
        if (data.success) {
            location.href = actionPath + "!hrefPage";
        } else {
            alertify.alert("操作失败");
        }
    }, "json");
}

/**
 * 点击完成改变事件状态
 */
function complete() {
    if (!judgeCheckedIds) {
        return;
    }
    var ids = getCheckedIds();
    $.post(actionPath + "!changeStatus?ids=" + ids.join(','), function(data) {
        if (data.success) {
            location.href = actionPath + "!hrefPage";
        } else {
            alertify.alert("操作失败");
        }
    }, "json")
}
/**
 * 保存新增备忘录数据
 */
function saveMemo() {
    var bv = $memoForm.data('bootstrapValidator');
    bv.validate();
    if (bv.isValid()) {
        var entity = $("#memoForm").serialize();
        $.post(actionPath + "!addOrUpdate", entity, function(data) {
            if (data.success) {
                location.href = actionPath + "!hrefPage";
            } else {
                alertify.alert("保存失败");
            }
        }, "json");
    }
}

/**
 * 点击查看弹出模态框
 */
function detail() {
    if (!judgeCheckedOneId()) {
        return;
    }
    var id = getCheckedFirstId();
    $.post(actionPath + "!detail?id=" + id, function(data) {
        var object = JSON.parse(data);
        var objectMemo = {
            id: object.id,
            title: object.title,
            content: object.content,
            memoTime: object.memoTime,
        }
        memoAddOrCheck(objectMemo);
    })
}

function loadData() {
    var options = {
        url: actionPath + "!page"
    };
    loadPaginationData(options);
}

function memoAddOrCheck(data) {
    var html = template("tpl-memo", data);

    if (data) {
        $(".modal-title", "#memoModal").html("查看");
    } else {
        $(".modal-title", "#memoModal").html("新增");
    }
    $("#add-memo").html(html);
    $("#memoModal").modal();
}


function initMemoValidator() {
    $memoForm = $('#memoForm');
    $memoForm.bootstrapValidator({
        excluded: [':disabled', ':hidden', ':not(:visible)'],
        live: 'enabled',
        fields: {
            "entity.title": {
                trigger: "blur",
                validators: {
                    notEmpty: {
                        message: '请输入标题'
                    }
                }
            },
            "entity.memoTime": {
                trigger: "blur",
                validators: {
                    notEmpty: {
                        message: '请选择录入时间'
                    },
                }
            },

        }
    });
}